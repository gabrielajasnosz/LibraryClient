<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="280sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tytulTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Tytuł książki"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/dataWypozyczeniaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="10sp"
                        android:text="Data wypożyczenia:"
                        android:textColor="#828282"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dataZwrotuTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:text="Data zwrotu:"
                        android:textColor="#828282"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/imieWypozyczajacegoTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="10sp"
                        android:text="Wypożyczający:"
                        android:textColor="#828282"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/imieWypozyczajacegoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:text="Imie:"
                        android:textColor="#828282"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nazwiskoWypozyczajacegoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:text="Nazwisko:"
                        android:textColor="#828282"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/okladkaImageView"
                    android:layout_width="90sp"
                    android:layout_height="120sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
